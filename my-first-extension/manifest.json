{
          "manifest_version": 3,
          "name": "Change Background Color",
          "version": "1.0",
          "description": "A simple extension to change the background color of the current page.",
          "permissions": [
                    "activeTab"
          ],
          "action": {
                    "default_icon": {
                              "16": "icons/icon16.png"
                    }
          },
          "content_scripts": [
                    {
                              "matches": [
                                        "<all_urls>"
                              ],
                              "js": [
                                        "content.js"
                              ]
                    }
          ]
}