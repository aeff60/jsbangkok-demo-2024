{
          "manifest_version": 3,
          "name": "Background Color Changer",
          "version": "1.0",
          "permissions": [
                    "activeTab",
                    "scripting"
          ],
          "action": {
                    "default_popup": "popup.html",
                    "default_title": "Change Background Color"
          },
          "content_scripts": [
                    {
                              "matches": [
                                        "<all_urls>"
                              ],
                              "js": [
                                        "content.js"
                              ]
                    }
          ]
}